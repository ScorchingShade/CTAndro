<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/TextGreet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_clevertap_sdk"
            android:textSize="30sp"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-black"

            />
        <TextView
            android:id="@+id/TextCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/click_the_button_below"
            android:layout_below="@+id/TextGreet"
            android:textSize="25sp"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/btnSDK"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:text="@string/click_here"
            android:textSize="20sp"
            android:layout_below="@+id/TextCaption"
            android:layout_marginTop="40sp"
            android:layout_centerHorizontal="true"

            />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>